generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int           @id @default(autoincrement())
  fullName           String        @map("full_name")
  rcmId              String?       @unique @map("rcm_id")
  email              String        @unique
  phone              String?
  password           String
  role               Role          @default(USER)
  createdAt          DateTime      @default(now())
  autoPayStatus      Boolean       @default(false)
  nextBillingDate    DateTime?
  razorpayCustomerId String?       @map("razorpay_customer_id")
  messages           ChatMessage[]

  @@map("users")
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  sender    String
  message   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@map("chat_messages")
}

model Subscriber {
  id           Int      @id @default(autoincrement())
  name         String
  phoneNumber  String   @map("phone_number")
  subscribedAt DateTime @default(now())

  @@map("subscribers")
}

model LeaderVideo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  videoUrl    String   @map("video_url")
  publicId    String?  @map("public_id")
  createdAt   DateTime @default(now())

  @@index([title])
  @@map("leader_videos")
}

model ProductVideo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  videoUrl    String   @map("video_url")
  publicId    String?  @map("public_id")
  createdAt   DateTime @default(now())

  @@index([title])
  @@map("product_videos")
}

enum Role {
  USER
  ADMIN
}
